<div class="index_main_post index-right_left_div">
  <h2 >社区活跃会员</h2>
  <div class="top_members">
    <span>目前已经有<%=@user_count.count%>名会员</span>
  </div>
  <div class="top_members_body">
    <div class="top_members_img">
      <ul>
        <%@users.each do|user|%>
          <li>
            <span>
              <%=link_to clients_path(user.id) do%>
                <img  src="<%=  user.avatar_url%>" />
              <%end%>

            </span>
            <div>
              <%=link_to limit_length(user.name,10),clients_path(user.id)%>
            </div>

          </li>
        <%end%>
      </ul>
    </div>
    <div class="digg_pagination pageTurn">
      <%=will_paginate @users,:previous_label=>'上一页',:next_label=>'下一页'%>
    </div>
    <div>
      &nbsp;
    </div>
  </div>
</div>
<script>
  var i = <%=@users.length%>
  if(i!=1){
    var height = 100 + (i-1) / 7 *84
    $('.top_members_img').css({
      height:height
    });
  }
</script>