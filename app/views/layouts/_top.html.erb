<div style="height: 10%">
  <div class="top">
    <div class="blok">
      <a style="float:left;" href="/"><img src="/assets/logo.jpg" /></a>
      <div class="top-list">
        <span>
          <%=link_to '论坛',all_index_posts_path %>
        </span>
        <span>
          <%=link_to '会员',top_100_members_clients_path %>
        </span>
        <%if current_user && current_user.admin?%>
          <span>
            <%=link_to '节点管理', nodes_path %>
          </span>
          <span>
            <%=link_to '小贴士管理',tips_path %>
          </span>
        <%end%>
        <span style="display: inline-block;">
          <%=form_for(:posts,url:search_posts_posts_path) do%>
          <input type="text" name="search_content" value="<%=@content if @content%>"/>
            <input type="submit" value="搜贴" style="padding: 1px 14px;background: #36c77b;color: white;border: 0px;"/>
          <%end%>
        </span>


      </div>
    </div>
    <div class="user_info_area"   style="padding-bottom: 5px;float: right;margin-top: -33px;margin-right: 60px;">
      <%if signed_in?%>
        <div style="float:left;height: 20px;margin-right: 5px;" onclick="show_user_act(this)"  >
          <%=link_to current_user.name,"javascript:void(0)",style:'color:white;' %>
          <ul class="user_act">
            <li><%=link_to '个人主页' ,clients_path%></li>
            <li><%=link_to '个人资料设置',client_info_clients_path  %></li>
            <li><%=link_to '我的收藏',my_collections_clients_path  %></li>
            <li><%=link_to '注销登录' , destroy_user_users_path,:'data-no-turbolink'=>""%></li>
          </ul>
        </div>
        <span >
          <a href="/messages/show_messages_page" title="消息">
            <i id="message_count" class="badge"></i>
          </a>
        </span>
      <%end%>
    </div>
  </div>
</div>